<Window x:Class="BrendanRusso_MiniCheckers_v1.NetworkInformationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="NetworkInformationWindow" ResizeMode="NoResize" SizeToContent="WidthAndHeight" WindowStartupLocation="CenterOwner" WindowStyle="None">
    <Grid Width="300" Height="120">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock HorizontalAlignment="Left" Margin="10,13,0,0" TextWrapping="Wrap" Text="IP Address:" VerticalAlignment="Top"/>
        <TextBlock HorizontalAlignment="Center" Name="lblPort" VerticalAlignment="Center" Text="port: 50000" Grid.Row="1"/>
        <TextBox Name="AddressField" HorizontalAlignment="Left" Height="23" Margin="73,10,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="210" TextChanged="AddressField_TextChanged"/>
        <Button Name="btnOkayIP" IsEnabled="False" Height="22" Width="75" Content="Okay" Grid.Row="3"/>
        <Slider Name="slidePort" Grid.Row="2" VerticalAlignment="Center" Maximum="65535" Minimum="49152" Value="50000" />


    </Grid>
</Window>
