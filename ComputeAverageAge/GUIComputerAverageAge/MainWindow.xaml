<Window x:Name="GUIComputeAverageAge" x:Class="GUIComputerAverageAge.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Best GUI Ever" Height="150" Width="300" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="67*"/>
            <ColumnDefinition Width="28*"/>
            <ColumnDefinition Width="35*"/>
            <ColumnDefinition Width="164*"/>
        </Grid.ColumnDefinitions>
        <TextBlock x:Name="Result" HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Top"><Run Language="en-au" Text="Result:"/></TextBlock>
        <TextBox x:Name="AgeValues" Grid.ColumnSpan="4" HorizontalAlignment="Left" Height="23" Margin="24,74,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="180"/>
        <Button x:Name="btnCompute" Content="Compute" Grid.Column="3" HorizontalAlignment="Left" Margin="79,75,0,0" VerticalAlignment="Top" Width="75" Click="btnCompute_Click"/>
    </Grid>
</Window>
