<Window x:Class="NetworkedTicTacToev2.NetworkInformationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="NetworkInformationWindow" ResizeMode="NoResize" WindowStartupLocation="CenterOwner" SizeToContent="WidthAndHeight" WindowStyle="None">
    <Grid Width="300" Height="75">
        <Button x:Name="btnOkay" Content="Okay" HorizontalAlignment="Left" Margin="106,39,0,0" VerticalAlignment="Top" Width="75" RenderTransformOrigin="0.5,0.5">
            <Button.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform AngleX="2.386"/>
                    <RotateTransform/>
                    <TranslateTransform X="0.458"/>
                </TransformGroup>
            </Button.RenderTransform>
        </Button>
        <TextBlock x:Name="txtIPAddress" HorizontalAlignment="Left" Margin="10,10,0,0" TextWrapping="Wrap" Text="IP Address:" VerticalAlignment="Top"/>
        <TextBox x:Name="txtBoxIPAddress" HorizontalAlignment="Left" Height="23" Margin="73,7,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="209" TextChanged="txtBoxIPAddress_TextChanged"/>

    </Grid>
</Window>
