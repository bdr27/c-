<Window x:Class="BrendanRusso_V3_PartOne.SameNameErrorBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="NameTheSame" ResizeMode="NoResize" SizeToContent="WidthAndHeight" WindowStartupLocation="CenterOwner" WindowStyle="None">
    <Grid Width="300" Height="75">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <TextBlock Margin="10,13,0,0" TextWrapping="Wrap" Text="Name's can not be the same:" VerticalAlignment="Top" HorizontalAlignment="Center"/>

        <Button Name="btnOkayName" Height="22" Width="75" Content="Okay" Grid.Row="1" Grid.Column="0" HorizontalAlignment="Center" Click="btnOkayName_Click"/>
    </Grid>
</Window>
