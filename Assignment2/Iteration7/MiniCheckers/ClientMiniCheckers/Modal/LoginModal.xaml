<Window x:Class="ClientMiniCheckers.Modal.LoginModal"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="LoginModal" ResizeMode="NoResize" SizeToContent="WidthAndHeight" WindowStartupLocation="CenterOwner" WindowStyle="None">
    <Grid Width="300" Height="100">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" Width="70" Text="Username: " Margin="10 0 0 0"  VerticalAlignment="Center" HorizontalAlignment="Left"/>
        <TextBox x:Name="tbUsername" Grid.Row="0" Width="200" Margin="0 0 10 0" HorizontalAlignment="Right" VerticalAlignment="Center" />
        <TextBlock Grid.Row="1" Width="70" Text="Password: " Margin="10 0 0 0"  VerticalAlignment="Center" HorizontalAlignment="Left"/>
        <PasswordBox x:Name="pbPassword" Grid.Row="1" Width="200" Margin="0 0 10 0" HorizontalAlignment="Right" VerticalAlignment="Center" />
        <Button x:Name="btnOkay" Grid.Row="2" Content="Okay" VerticalAlignment="Center" HorizontalAlignment="Center" Width="60" Click="btnOkay_Click"/>
        
    </Grid>
</Window>
